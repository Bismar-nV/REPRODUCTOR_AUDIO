<?xml version="1.0" encoding="utf-8"?>

<resources>
	<style name="Blue_light.VanillaBase" parent="android:Theme.Material.Light.DarkActionBar">
		<item name="overlay_background_color">@color/overlay_background_light</item>
		<item name="overlay_foreground_color">@color/overlay_foreground_light</item>
		<item name="float_color">@color/material_grey_400</item>
		<item name="tabs_background">#FF0277BD</item>
		<item name="now_playing_marker">#FF03A9F4</item>
		<item name="controls_normal">@color/material_grey_900</item>
		<item name="controls_active">#FF03A9F4</item>
		<item name="android:colorAccent">#FF03A9F4</item>
		<item name="android:colorPrimary">#FF0277BD</item>
		<item name="android:colorPrimaryDark">#FF01579B</item>
		<item name="themed_letter_tile_colors">@array/letter_tile_colors_light</item>
	</style>

	<style name="Blue_light.Playback" parent="Blue_light.VanillaBase">
		<item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
	</style>

	<style name="Blue_light.BackActionBar" parent="Blue_light.VanillaBase">
		<item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
	</style>

	<style name="Blue_light.Library" parent="Blue_light.VanillaBase">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="Blue_light.PopupDialog" parent="android:Theme.Material.Light.Dialog.MinWidth">
		<item name="overlay_background_color">@color/overlay_background_light</item>
		<item name="controls_normal">@color/material_grey_900</item>
		<item name="controls_active">#FF03A9F4</item>
	</style>

	<style name="Blue_light.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="android:colorBackground">@color/overlay_background_light</item>
	</style>


</resources>
