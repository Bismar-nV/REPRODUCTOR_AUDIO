<?xml version="1.0" encoding="utf-8"?>

<resources>
	<style name="Grey_light.VanillaBase" parent="android:Theme.Material.Light.DarkActionBar">
		<item name="overlay_background_color">@color/overlay_background_light</item>
		<item name="overlay_foreground_color">@color/overlay_foreground_light</item>
		<item name="float_color">@color/material_grey_400</item>
		<item name="tabs_background">#ff212121</item>
		<item name="now_playing_marker">#ff000000</item>
		<item name="controls_normal">@color/material_grey_600</item>
		<item name="controls_active">#ff000000</item>
		<item name="android:colorAccent">#ff000000</item>
		<item name="android:colorPrimary">#ff212121</item>
		<item name="android:colorPrimaryDark">#ff090909</item>
		<item name="themed_letter_tile_colors">@array/letter_tile_colors_light</item>
	</style>

	<style name="Grey_light.Playback" parent="Grey_light.VanillaBase">
		<item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
	</style>

	<style name="Grey_light.BackActionBar" parent="Grey_light.VanillaBase">
		<item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
	</style>

	<style name="Grey_light.Library" parent="Grey_light.VanillaBase">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="Grey_light.PopupDialog" parent="android:Theme.Material.Light.Dialog.MinWidth">
		<item name="overlay_background_color">@color/overlay_background_light</item>
		<item name="controls_normal">@color/material_grey_600</item>
		<item name="controls_active">#ff000000</item>
	</style>

	<style name="Grey_light.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="android:colorBackground">@color/overlay_background_light</item>
	</style>


</resources>
